{"ast":null,"code":"import { ref, computed } from 'vue';\nimport { useRouter, useRoute } from 'vue-router';\nimport { useStore } from 'vuex';\nimport { Monitor, VideoCamera, DataLine, Files, TrendCharts, User, Setting, SwitchButton, CaretBottom, Loading } from '@element-plus/icons-vue';\nexport default {\n  name: 'MainLayout',\n  components: {\n    Monitor,\n    VideoCamera,\n    DataLine,\n    Files,\n    TrendCharts,\n    User,\n    Setting,\n    SwitchButton,\n    CaretBottom,\n    Loading\n  },\n  setup() {\n    const router = useRouter();\n    const route = useRoute();\n    const store = useStore();\n    const isCollapsed = ref(false);\n    const userAvatar = ref('https://avatars.githubusercontent.com/u/1?v=4');\n    const username = ref('Admin');\n    const activeMenu = computed(() => route.path);\n    const currentRoute = computed(() => {\n      const routeMap = {\n        '/overview': '实时监测',\n        '/monitoring': '智能预测',\n        '/analysis': '趋势分析',\n        '/management': '数据管理',\n        '/evaluation': '预警评估'\n      };\n      return routeMap[route.path] || '未知页面';\n    });\n    const toggleSidebar = () => {\n      isCollapsed.value = !isCollapsed.value;\n    };\n    const handleMenuSelect = index => {\n      router.push(index);\n    };\n    const goToProfile = () => {\n      router.push('/profile');\n    };\n    const goToSettings = () => {\n      router.push('/settings');\n    };\n    const handleLogout = async () => {\n      try {\n        await store.dispatch('auth/logout');\n        router.push('/login');\n      } catch (error) {\n        console.error('Logout failed:', error);\n      }\n    };\n    return {\n      isCollapsed,\n      userAvatar,\n      username,\n      activeMenu,\n      currentRoute,\n      toggleSidebar,\n      handleMenuSelect,\n      goToProfile,\n      goToSettings,\n      handleLogout\n    };\n  }\n};","map":{"version":3,"names":["ref","computed","useRouter","useRoute","useStore","Monitor","VideoCamera","DataLine","Files","TrendCharts","User","Setting","SwitchButton","CaretBottom","Loading","name","components","setup","router","route","store","isCollapsed","userAvatar","username","activeMenu","path","currentRoute","routeMap","toggleSidebar","value","handleMenuSelect","index","push","goToProfile","goToSettings","handleLogout","dispatch","error","console"],"sources":["D:\\restore\\water-melt\\frontend\\src\\layouts\\MainLayout.vue"],"sourcesContent":["<!-- 主布局组件 -->\n<template>\n  <div class=\"main-layout\">\n    <!-- 顶部导航栏 -->\n    <div class=\"header\">\n      <div class=\"header-left\">\n        <div class=\"logo\">\n          <div class=\"logo-main\">\n            <h1 class=\"logo-text\">智能先知</h1>\n            <div class=\"logo-divider\"></div>\n            <div class=\"logo-subtitle\">多变量土湿预测监测系统</div>\n          </div>\n        </div>\n        <el-menu\n          :default-active=\"activeMenu\"\n          mode=\"horizontal\"\n          class=\"main-menu\"\n          background-color=\"transparent\"\n          text-color=\"rgba(0, 0, 0, 0.85)\"\n          active-text-color=\"#1890ff\"\n          @select=\"handleMenuSelect\"\n        >\n          <el-menu-item index=\"/overview\">\n            <el-icon><Monitor /></el-icon>\n            <span>实时监测</span>\n            <div class=\"menu-indicator\"></div>\n          </el-menu-item>\n          <el-menu-item index=\"/monitoring\">\n            <el-icon><VideoCamera /></el-icon>\n            <span>智能预测</span>\n            <div class=\"menu-indicator\"></div>\n          </el-menu-item>\n          <el-menu-item index=\"/analysis\">\n            <el-icon><DataLine /></el-icon>\n            <span>趋势分析</span>\n            <div class=\"menu-indicator\"></div>\n          </el-menu-item>\n          <el-menu-item index=\"/management\">\n            <el-icon><Files /></el-icon>\n            <span>数据管理</span>\n            <div class=\"menu-indicator\"></div>\n          </el-menu-item>\n          <el-menu-item index=\"/evaluation\">\n            <el-icon><TrendCharts /></el-icon>\n            <span>预警评估</span>\n            <div class=\"menu-indicator\"></div>\n          </el-menu-item>\n        </el-menu>\n      </div>\n      <div class=\"header-right\">\n        <div class=\"system-status\">\n          <el-tag size=\"small\" type=\"success\" effect=\"dark\" class=\"status-tag\">\n            <el-icon class=\"status-icon\"><Loading /></el-icon>\n            <span>系统运行正常</span>\n          </el-tag>\n        </div>\n        <el-divider direction=\"vertical\" class=\"divider\" />\n        <el-breadcrumb separator=\"/\" class=\"breadcrumb\">\n          <el-breadcrumb-item :to=\"{ path: '/' }\">首页</el-breadcrumb-item>\n          <el-breadcrumb-item>{{ currentRoute }}</el-breadcrumb-item>\n        </el-breadcrumb>\n        <el-divider direction=\"vertical\" class=\"divider\" />\n        <div class=\"user-info\">\n          <el-dropdown trigger=\"click\">\n            <div class=\"user-profile\">\n              <el-avatar :size=\"32\" :src=\"userAvatar\" />\n              <span class=\"username\">{{ username }}</span>\n              <el-icon class=\"dropdown-icon\"><CaretBottom /></el-icon>\n            </div>\n            <template #dropdown>\n              <el-dropdown-menu>\n                <el-dropdown-item @click=\"goToProfile\">\n                  <el-icon><User /></el-icon>个人信息\n                </el-dropdown-item>\n                <el-dropdown-item @click=\"goToSettings\">\n                  <el-icon><Setting /></el-icon>系统设置\n                </el-dropdown-item>\n                <el-dropdown-item divided @click=\"handleLogout\">\n                  <el-icon><SwitchButton /></el-icon>退出登录\n                </el-dropdown-item>\n              </el-dropdown-menu>\n            </template>\n          </el-dropdown>\n        </div>\n      </div>\n    </div>\n\n    <!-- 主内容区 -->\n    <div class=\"main-container\">\n      <div class=\"content\">\n        <router-view v-slot=\"{ Component }\">\n          <transition name=\"fade\" mode=\"out-in\">\n            <component :is=\"Component\" />\n          </transition>\n        </router-view>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { ref, computed } from 'vue'\nimport { useRouter, useRoute } from 'vue-router'\nimport { useStore } from 'vuex'\nimport {\n  Monitor,\n  VideoCamera,\n  DataLine,\n  Files,\n  TrendCharts,\n  User,\n  Setting,\n  SwitchButton,\n  CaretBottom,\n  Loading\n} from '@element-plus/icons-vue'\n\nexport default {\n  name: 'MainLayout',\n  components: {\n    Monitor,\n    VideoCamera,\n    DataLine,\n    Files,\n    TrendCharts,\n    User,\n    Setting,\n    SwitchButton,\n    CaretBottom,\n    Loading\n  },\n  setup() {\n    const router = useRouter()\n    const route = useRoute()\n    const store = useStore()\n\n    const isCollapsed = ref(false)\n    const userAvatar = ref('https://avatars.githubusercontent.com/u/1?v=4')\n    const username = ref('Admin')\n\n    const activeMenu = computed(() => route.path)\n    const currentRoute = computed(() => {\n      const routeMap = {\n        '/overview': '实时监测',\n        '/monitoring': '智能预测',\n        '/analysis': '趋势分析',\n        '/management': '数据管理',\n        '/evaluation': '预警评估'\n      }\n      return routeMap[route.path] || '未知页面'\n    })\n\n    const toggleSidebar = () => {\n      isCollapsed.value = !isCollapsed.value\n    }\n\n    const handleMenuSelect = (index) => {\n      router.push(index)\n    }\n\n    const goToProfile = () => {\n      router.push('/profile')\n    }\n\n    const goToSettings = () => {\n      router.push('/settings')\n    }\n\n    const handleLogout = async () => {\n      try {\n        await store.dispatch('auth/logout')\n        router.push('/login')\n      } catch (error) {\n        console.error('Logout failed:', error)\n      }\n    }\n\n    return {\n      isCollapsed,\n      userAvatar,\n      username,\n      activeMenu,\n      currentRoute,\n      toggleSidebar,\n      handleMenuSelect,\n      goToProfile,\n      goToSettings,\n      handleLogout\n    }\n  }\n}\n</script>\n\n<style lang=\"scss\" scoped>\n@import '@/styles/variables.scss';\n\n.main-layout {\n  display: flex;\n  flex-direction: column;\n  height: 100vh;\n  background: linear-gradient(135deg, #001529 0%, #003366 100%);\n\n  .header {\n    height: 64px;\n    background: rgba(255, 255, 255, 0.05);\n    backdrop-filter: blur(10px);\n    border-bottom: 1px solid rgba(255, 255, 255, 0.1);\n    padding: 0 24px;\n    display: flex;\n    align-items: center;\n    justify-content: space-between;\n    box-shadow: 0 1px 20px rgba(0, 0, 0, 0.1);\n    position: fixed;\n    top: 0;\n    left: 0;\n    right: 0;\n    z-index: $zindex-fixed;\n    transition: all 0.3s ease;\n\n    .header-left {\n      display: flex;\n      align-items: center;\n      height: 100%;\n\n      .logo {\n        padding-right: 48px;\n        height: 100%;\n        display: flex;\n        align-items: center;\n        \n        .logo-main {\n          display: flex;\n          align-items: center;\n          gap: 12px;\n\n          .logo-text {\n            font-size: 22px;\n            font-weight: 600;\n            color: #fff;\n            margin: 0;\n            letter-spacing: -0.5px;\n            position: relative;\n            padding-right: 12px;\n            text-shadow: 0 0 20px rgba(24, 144, 255, 0.5);\n          }\n\n          .logo-divider {\n            width: 1px;\n            height: 24px;\n            background: rgba(255, 255, 255, 0.1);\n          }\n\n          .logo-subtitle {\n            font-size: 14px;\n            color: rgba(255, 255, 255, 0.85);\n            font-weight: 400;\n          }\n        }\n      }\n\n      .main-menu {\n        height: 100%;\n        border: none;\n        display: flex;\n        align-items: center;\n        background: transparent;\n\n        :deep(.el-menu-item) {\n          height: 64px;\n          line-height: 64px;\n          padding: 0 20px;\n          font-size: 14px;\n          font-weight: 500;\n          color: rgba(255, 255, 255, 0.85);\n          position: relative;\n          transition: all 0.3s cubic-bezier(0.645, 0.045, 0.355, 1);\n          background: transparent !important;\n\n          .menu-indicator {\n            position: absolute;\n            bottom: 0;\n            left: 50%;\n            transform: translateX(-50%) scaleX(0);\n            width: 24px;\n            height: 2px;\n            background: #1890ff;\n            border-radius: 2px;\n            box-shadow: 0 0 10px rgba(24, 144, 255, 0.5);\n            transition: transform 0.3s cubic-bezier(0.645, 0.045, 0.355, 1);\n          }\n\n          &.is-active {\n            color: #fff;\n            background: transparent;\n\n            .menu-indicator {\n              transform: translateX(-50%) scaleX(1);\n            }\n\n            .el-icon {\n              color: #1890ff;\n              text-shadow: 0 0 10px rgba(24, 144, 255, 0.5);\n            }\n          }\n\n          &:hover {\n            color: #fff;\n            background: rgba(24, 144, 255, 0.1) !important;\n\n            .el-icon {\n              color: #1890ff;\n              transform: translateY(-2px);\n            }\n          }\n\n          .el-icon {\n            margin-right: 8px;\n            font-size: 16px;\n            color: rgba(255, 255, 255, 0.85);\n            transition: all 0.3s;\n          }\n\n          span {\n            transition: color 0.3s;\n          }\n        }\n      }\n    }\n\n    .header-right {\n      display: flex;\n      align-items: center;\n      height: 100%;\n      gap: 16px;\n\n      .system-status {\n        .status-tag {\n          display: flex;\n          align-items: center;\n          gap: 6px;\n          height: 28px;\n          padding: 0 12px;\n          border-radius: 14px;\n          background: rgba(82, 196, 26, 0.2);\n          border: 1px solid rgba(82, 196, 26, 0.3);\n          color: #fff;\n\n          .status-icon {\n            font-size: 14px;\n            animation: rotate 2s linear infinite;\n            color: #52c41a;\n          }\n\n          span {\n            font-size: 13px;\n            font-weight: 500;\n          }\n        }\n      }\n\n      .divider {\n        height: 20px;\n        margin: 0;\n        border-color: rgba(255, 255, 255, 0.1);\n      }\n\n      .breadcrumb {\n        font-size: 13px;\n        :deep(.el-breadcrumb__item) {\n          .el-breadcrumb__inner {\n            color: rgba(255, 255, 255, 0.65);\n            &.is-link {\n              color: rgba(255, 255, 255, 0.85);\n              &:hover {\n                color: #1890ff;\n              }\n            }\n          }\n          .el-breadcrumb__separator {\n            color: rgba(255, 255, 255, 0.45);\n          }\n        }\n      }\n\n      .user-info {\n        .user-profile {\n          display: flex;\n          align-items: center;\n          gap: 8px;\n          padding: 4px 12px;\n          border-radius: 6px;\n          cursor: pointer;\n          transition: all 0.3s;\n          background: rgba(255, 255, 255, 0.04);\n          border: 1px solid rgba(255, 255, 255, 0.1);\n\n          &:hover {\n            background: rgba(255, 255, 255, 0.08);\n            border-color: rgba(255, 255, 255, 0.2);\n\n            .dropdown-icon {\n              transform: rotate(180deg);\n            }\n          }\n\n          .el-avatar {\n            border: 2px solid transparent;\n            transition: all 0.3s;\n            background: rgba(255, 255, 255, 0.1);\n\n            &:hover {\n              border-color: #1890ff;\n              box-shadow: 0 0 10px rgba(24, 144, 255, 0.3);\n            }\n          }\n\n          .username {\n            font-size: 14px;\n            color: rgba(255, 255, 255, 0.85);\n            font-weight: 500;\n          }\n\n          .dropdown-icon {\n            font-size: 12px;\n            color: rgba(255, 255, 255, 0.65);\n            transition: transform 0.3s;\n          }\n        }\n      }\n    }\n  }\n\n  .main-container {\n    flex: 1;\n    margin-top: 64px;\n    overflow: hidden;\n    background: linear-gradient(135deg, rgba(0, 21, 41, 0.8) 0%, rgba(0, 51, 102, 0.9) 100%);\n    backdrop-filter: blur(10px);\n    position: relative;\n\n    &::before {\n      content: '';\n      position: absolute;\n      top: 0;\n      left: 0;\n      right: 0;\n      bottom: 0;\n      background: \n        radial-gradient(circle at 10% 20%, rgba(24, 144, 255, 0.05) 0%, transparent 20%),\n        radial-gradient(circle at 90% 80%, rgba(24, 144, 255, 0.05) 0%, transparent 20%),\n        radial-gradient(circle at 50% 50%, rgba(24, 144, 255, 0.05) 0%, transparent 50%);\n      pointer-events: none;\n    }\n\n    .content {\n      height: 100%;\n      padding: 24px;\n      overflow-y: auto;\n      scroll-behavior: smooth;\n      position: relative;\n      z-index: 1;\n\n      &::-webkit-scrollbar {\n        width: 6px;\n      }\n\n      &::-webkit-scrollbar-thumb {\n        background: rgba(255, 255, 255, 0.2);\n        border-radius: 3px;\n\n        &:hover {\n          background: rgba(255, 255, 255, 0.3);\n        }\n      }\n\n      &::-webkit-scrollbar-track {\n        background: transparent;\n      }\n    }\n  }\n}\n\n// 路由过渡动画\n.fade-enter-active,\n.fade-leave-active {\n  transition: opacity 0.2s cubic-bezier(0.645, 0.045, 0.355, 1);\n}\n\n.fade-enter-from,\n.fade-leave-to {\n  opacity: 0;\n}\n\n@keyframes rotate {\n  from {\n    transform: rotate(0deg);\n  }\n  to {\n    transform: rotate(360deg);\n  }\n}\n</style> "],"mappings":"AAqGA,SAASA,GAAG,EAAEC,QAAO,QAAS,KAAI;AAClC,SAASC,SAAS,EAAEC,QAAO,QAAS,YAAW;AAC/C,SAASC,QAAO,QAAS,MAAK;AAC9B,SACEC,OAAO,EACPC,WAAW,EACXC,QAAQ,EACRC,KAAK,EACLC,WAAW,EACXC,IAAI,EACJC,OAAO,EACPC,YAAY,EACZC,WAAW,EACXC,OAAM,QACD,yBAAwB;AAE/B,eAAe;EACbC,IAAI,EAAE,YAAY;EAClBC,UAAU,EAAE;IACVX,OAAO;IACPC,WAAW;IACXC,QAAQ;IACRC,KAAK;IACLC,WAAW;IACXC,IAAI;IACJC,OAAO;IACPC,YAAY;IACZC,WAAW;IACXC;EACF,CAAC;EACDG,KAAKA,CAAA,EAAG;IAC